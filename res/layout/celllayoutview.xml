<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ImageView
        android:id="@+id/cellimage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitCenter" />
    
    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/cellicon"
        android:layout_height="@dimen/cellicon"
        android:src="@drawable/ic_launcher"
        android:layout_gravity="center"
        android:layout_marginTop="-20dp" />

    <TextView
        android:id="@+id/cellname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/cellicontoname"
        android:text="CellName"
        android:textSize="@dimen/cellnamesize"
        android:textColor="#FFFFFF" />
    
</FrameLayout>